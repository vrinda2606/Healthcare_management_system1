    gr.addEncodedQuery("u_status=scheduled^u_appointment_dateONTomorrow@javascript:gs.beginningOfTomorrow()@javascript:gs.endOfTomorrow()");
    gr.query();

    while (gr.next()) {
        var patient = gr.u_patient_id;
